<div class="row">

  <div class="col-md-6">
    <%= form_for(@report) do |f| %>
      <% if @report.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

          <ul>
          <% @report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group form-inline">
        <%= f.label :tag %>
        <%= f.text_field :tag, class: "form-control typeahead", autocomplete: "off" %>
      </div>
      <div class="field form-group">
        <%= f.text_field :title, id: "title", class: "form-control", placeholder:"title" %>
      </div>
      <div class="field form-group">
        <%= f.text_area :content, id: "content", class: "form-control", placeholder:"content", rows: 20 %>
      </div>
      <div>
        <% @report.attachments.each { |a| %>
          <%= a.name %>
          <%= link_to '削除', a, method: :delete, data: { confirm: '削除しますか?' }, class: "btn btn-warning btn-sm" %>
        <% } %>
      </div>
      <br>
      <div class="field form-group">
        <%= f.file_field :attachment, id: "attachment" %>
      </div>
      <div class="field form-group form-inline">
				<%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
      <hr>
      <div class="actions">
        <%= link_to '戻る', reports_path, class: "btn btn-default" %>
				<% unless name == '更新' && @report.user_id != current_user.id %> 
					<%= submit_tag name, class: "btn btn-primary" %>
				<% end %>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <div id="title-view"></div>

    <div id="content-view"></div>
  </div>

</div>
