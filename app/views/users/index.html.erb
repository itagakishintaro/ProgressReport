<h1>Listing Users</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= user.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-default" %>
